<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:foreground="?attr/selectableItemBackground">

    <!-- using foreground of a FrameLayout to show touch feedback -->

    <!-- TODO: find out why Glide has issues with image sizing when there is no placeholder -->
    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/accessibility_poster_description"
        android:scaleType="fitCenter"
        android:src="@drawable/poster_placeholder" />

</FrameLayout>
